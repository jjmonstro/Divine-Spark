<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DivineSpark.MainPage"
             Shell.NavBarIsVisible="False">
    
    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="50" RowSpacing="25" Margin="0" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Image Aspect="AspectFill" Source="sala1.png" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
        <Image Aspect="AspectFit" Source="monster1.png" Grid.Row="0" Grid.Column="1" WidthRequest="150"/>
        <Image Aspect="AspectFit" Source="monster1.png" Grid.Row="0" Grid.Column="2" WidthRequest="150"/>

        <Button x:Name="FrenteButton" Text="gerar sala" Grid.Row="1" Grid.Column="1" IsVisible="False"/>
        <Button x:Name="VoltaButton" Text="voltar sala" Grid.Row="2" Grid.Column="1" IsVisible="False"/>
        <Button x:Name="EsquerdaButton" Text="Botão na parte inferior4()" Grid.Row="2" Grid.Column="0" IsVisible="False"/>
        <Button x:Name="DireitaButton" Text="Botão na parte inferior6()" Grid.Row="2" Grid.Column="2" IsVisible="False"/>
    </Grid>
</ContentPage>