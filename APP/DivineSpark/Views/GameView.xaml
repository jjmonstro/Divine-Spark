<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DivineSpark.Views.GameView"
             Shell.NavBarIsVisible="False">
    
    <Grid Margin="0" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="{Binding Image}" Aspect="AspectFill"/>

        <Grid Grid.Row="0" Grid.Column="1">
            <!--coissas que vão ficar em cima da imagem de fundo, tipo bau e monstor -->
            <Label Text="teste" Grid.Row="0" Grid.Column="0" />
        </Grid>


        <Grid Grid.Row="1" ColumnSpacing="50" RowSpacing="25" Margin="0" Padding="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button x:Name="FrenteButton" Text="botão pra frente" Grid.Row="1" Grid.Column="1" IsVisible="{Binding PodeFrente}" Command="{Binding FrenteButton1Command}"/>
        <Button x:Name="VoltaButton" Text="botão para traseira" Grid.Row="3" Grid.Column="1" IsVisible="{Binding PodeVolta}"/>
        <Button x:Name="EsquerdaButton" Text="botão para esquerda" Grid.Row="2" Grid.Column="0" IsVisible="{Binding PodeEsquerda}"/>
        <Button x:Name="DireitaButton" Text="botão direita" Grid.Row="2" Grid.Column="2" IsVisible="{Binding PodeDireita}" /> 
            
        </Grid>

    </Grid>
</ContentPage>
    
