                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Frame 
    
                    Grid.Column="0"
                    Grid.Row="0"
                    CornerRadius="20"
                       Padding="0"
                       HasShadow="False"
                       BackgroundColor="Transparent"
                       BorderColor="Transparent"
                       WidthRequest="120"
                       HeightRequest="120">

                    <Image
        
                        Source="marina.jpg"
                        Aspect="AspectFill"/>
                </Frame>

                <Label
                    Grid.Row="0"
                    Grid.Column="1"
