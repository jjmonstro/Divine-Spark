                Grid.Column="1"
                Text="Gabriel Kenzo Takeuchi"
                TextColor="White"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>

                
                <Frame 
                    Grid.Column="0"
                    Grid.Row="2"
                   CornerRadius="20"
                   Padding="0"
                   HasShadow="False"
                   BackgroundColor="Transparent"
                   BorderColor="Transparent"
                   WidthRequest="120"
                   HeightRequest="120">

                    <Image
                        
                        Source="andre.jpg"
                        Aspect="AspectFill"/>
                </Frame>
                <Label
                Grid.Row="2"
                Grid.Column="1"
                Text="Andre Nogueira Pissuto"
                TextColor="White"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
                
            </Grid>


            <Grid Grid.Column="1" RowSpacing="10" >
                <!--metade da direita-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
