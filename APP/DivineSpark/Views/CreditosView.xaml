                <Label
                Grid.Row="2"
                Grid.Column="1"
                Text="Matheus Bernardino Gomes"
                TextColor="White"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            </Grid>
        </Grid>


        <Grid Grid.Row="1" ColumnSpacing="40" RowSpacing="20" Margin="30" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
