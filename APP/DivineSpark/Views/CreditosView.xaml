                    VerticalOptions="Center"/>


                <Frame 
                    Grid.Column="0"
                    Grid.Row="1"
                       CornerRadius="20"
                       Padding="0"
                       HasShadow="False"
                       BackgroundColor="Transparent"
                       BorderColor="Transparent"
                       WidthRequest="120"
                       HeightRequest="120">

                    <Image
        
                        Source="arthur.jpeg"
                        Aspect="AspectFill"/>
                </Frame>

                <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="Arthur Bergamaschi Souza Sarria"
                TextColor="White"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>


                <Frame 
                    Grid.Column="0"
                    Grid.Row="2"
                   CornerRadius="20"
                   Padding="0"
                   HasShadow="False"
                   BackgroundColor="Transparent"
                   BorderColor="Transparent"
                   WidthRequest="120"
                   HeightRequest="120">

                    <Image
        
